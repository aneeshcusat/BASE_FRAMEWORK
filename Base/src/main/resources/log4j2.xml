<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="famstackconsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
         <RandomAccessFile name="famstacklogfile" fileName="${user.home}/logs/famstack.out" immediateFlush="false" append="false">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </RandomAccessFile>
         <RollingRandomAccessFile name="Rollingfamstacklogfile"
                                 fileName="${user.home}/logs/famstack.log"
                                 filePattern="${user.home}/logs/famstack.log.%d{yyyy-MM-dd-hh-mm}.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] [%-5level] %c{1} - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="1 KB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <AsyncLogger name="FamStackTrace" level="trace" includeLocation="true">
            <AppenderRef ref="famstackconsole" />
            <AppenderRef ref="Rollingfamstacklogfile"/>
        </AsyncLogger>
        <AsyncLogger name="FamStackError" level="error" includeLocation="true">
            <AppenderRef ref="famstackconsole" />
            <AppenderRef ref="Rollingfamstacklogfile"/>
        </AsyncLogger>
        <AsyncLogger name="FamStackInfo" level="info" includeLocation="true">
            <AppenderRef ref="famstackconsole" />
            <AppenderRef ref="Rollingfamstacklogfile"/>
        </AsyncLogger>
        <root level="debug">  
     		 <appender-ref ref="famstackconsole"/>  
      		<appender-ref ref="Rollingfamstacklogfile"/>  
    	</root>  
    </Loggers>
</Configuration>
